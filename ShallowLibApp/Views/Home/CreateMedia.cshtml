@using Microsoft.AspNetCore.Identity
@using AuthDatabase.Entities;
@model LibraryViewModel

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
<!DOCTYPE html>
<html>
<head>
    <title>Animated Dynamic Form</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/main.css" />


</head>

<!-- Coded With Love By Mutiullah Samim-->
<body>
    <dvi class="container h-100">
        <div class="d-flex justify-content-center">
            <div class="card mt-5 col-md-4 animated bounceInDown myForm">
                <div class="card-header">

                    <h3>Add Media to Lib </h3>
                </div>
                <div class="card-body">
                    <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                        <div id="dynamic_container">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text br-15"><i class="fas fa-user-graduate"></i></span>
                                </div>
                                <input type="text" placeholder="Title" class="form-control" />
                            </div>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text br-15"><i class="fas fa-user-graduate"></i></span>
                                </div>
                                <input type="text" placeholder="Type of Media " class="form-control" />
                            </div>
                            @*<div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text br-15"><i class="fas fa-user-graduate"></i></span>
                                </div>
                                @if (Model.Items.Select(m => m.TypeofMedia).FirstOrDefault() == "DVD")
                                {
                                    <input type="text" placeholder="Reżyser" class="form-control" />
                                }
                                @if (Model.Items.Select(m => m.TypeofMedia).FirstOrDefault() == "CD")
                                {
                                    <input type="text" placeholder="Wykonawca" class="form-control" />
                                }
                                @if (Model.Items.Select(m => m.TypeofMedia).FirstOrDefault() == "Book")
                                {
                                    <input type="text" placeholder="Autor" class="form-control" />
                                }

                            </div>*@
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text br-15"><i class="fas fa-user-graduate"></i></span>
                                </div>
                                <input type="text" placeholder="Year" class="form-control" />
                            </div>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text br-15"><i class="fas fa-user-graduate"></i></span>
                                </div>
                                <input type="text" placeholder="Autor Name" class="form-control" />
                            </div>

                            

                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    <a  asp-action="Index" class="btn btn-secondary btn-sm" id="add_more"><i class="fas fa-plus-circle"></i> Back </a>
                    
                    <button class="btn btn-success btn-sm float-right submit_btn"><i class="fas fa-arrow-alt-circle-right"></i> Submit</button>

                </div>
            </div>
        </div>
    </dvi>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/umd/popper.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</body>

</html>
